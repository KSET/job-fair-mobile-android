<?xml version="1.0" encoding="utf-8"?>
<font-family
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- regular -->
    <font
        app:font="@font/montserrat_regular"
        app:fontStyle="normal"/>

    <!-- bold -->
    <font
        app:font="@font/montserrat_bold"
        app:fontWeight="400"/>

    <!-- Medium -->
    <font
        app:font="@font/montserrat_medium"
        app:fontWeight="700"/>

    <!-- light -->
    <font
        app:font="@font/montserrat_light"
        app:fontWeight="200"/>

</font-family>