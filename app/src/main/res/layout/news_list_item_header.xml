<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:clipToPadding="false"
             android:foreground="?selectableItemBackground"
             android:paddingLeft="16dp"
             android:paddingRight="16dp"
             android:paddingBottom="12dp">

    <com.google.android.material.card.MaterialCardView
        style="@style/DefaultCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                tools:src="@drawable/ic_placeholder"/>

            <TextView
                android:id="@+id/title"
                style="@style/ListTitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/news_header_padding_horizontal"
                android:paddingTop="6dp"
                android:paddingRight="@dimen/news_header_padding_horizontal"
                tools:text="Postani profesionalni stock photo model ide tekst dalje!"/>

            <TextView
                android:id="@+id/datetime"
                style="@style/ListSubTitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/news_header_padding_horizontal"
                android:paddingTop="8dp"
                android:paddingRight="@dimen/news_header_padding_horizontal"
                android:paddingBottom="@dimen/news_header_padding_vertical"
                android:textAllCaps="false"
                tools:text="4.Svibanj 2017  â€¢  08:49"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</FrameLayout>