<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:overScrollMode="never">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="blocksDescendants"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:padding="16dp"
            tools:src="@drawable/ic_placeholder"/>

        <TextView
            android:id="@+id/datetime"
            style="@style/ListSubTitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/detail_content_padding_horizontal"
            android:paddingRight="@dimen/detail_content_padding_horizontal"
            android:textAllCaps="false"
            tools:text="4.Svibanj 2017  â€¢  08:49"/>

        <TextView
            android:id="@+id/title"
            style="@style/DetailTitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/detail_content_padding_horizontal"
            android:paddingTop="8dp"
            android:paddingRight="@dimen/detail_content_padding_horizontal"
            android:paddingBottom="16dp"
            tools:text="Postani profesionalni stock photo model ide tekst dalje!"/>

        <WebView
            android:id="@+id/content"
            style="@style/TextWebView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/detail_content_padding_horizontal"
            android:layout_marginRight="@dimen/detail_content_padding_horizontal"
            android:lineSpacingMultiplier="2"
            tools:text="@string/loremipsum"/>

    </LinearLayout>

</ScrollView>
